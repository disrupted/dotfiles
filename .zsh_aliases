function mkcd() { mkdir $1; cd $1;}
alias c='clear'
alias wget='wget --content-disposition'
alias venv='source ~/work/python/environments/venv/bin/activate'
alias update='sudo apt-get update && sudo apt-get upgrade -y'
alias l='exa --icons -la --git --git-ignore --ignore-glob=".DS_Store|__MACOSX"'
alias la='exa --icons -la'
alias ll='exa --icons -la --git --git-ignore --ignore-glob=".git|.DS_Store|__MACOSX" -T -L2'
alias ll3='exa --icons -la --git --git-ignore --ignore-glob=".git|.DS_Store|__MACOSX" -T -L3'
alias ll4='exa --icons -la --git --git-ignore --ignore-glob=".git|.DS_Store|__MACOSX" -T -L4'
alias d='sudo docker'
alias dc='sudo docker-compose'
alias dexec='sudo docker exec -e COLUMNS="`tput cols`" -e LINES="`tput lines`" -ti'
alias ha='dexec -it hassio_cli ha'
