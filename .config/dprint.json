{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "incremental": true,
  "typescript": {
    "indentWidth": 2,
    "lineWidth": 80,
    "arguments.trailingCommas": "never",
    "parameters.trailingCommas": "never"
  },
  "json": {
    "associations": [
      "**/*.avsc"
    ]
  },
  "markdown": {},
  "toml": {},
  "dockerfile": {},
  "includes": [
    "**/*.{ts,tsx,js,jsx,cjs,mjs,json,avsc,md,toml}",
    "dockerfile"
  ],
  "excludes": ["**/node_modules", "**/*-lock.json", "**/target"],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.62.0.wasm",
    "https://plugins.dprint.dev/json-0.14.0.wasm",
    "https://plugins.dprint.dev/markdown-0.12.1.wasm",
    "https://plugins.dprint.dev/toml-0.5.3.wasm",
    "https://plugins.dprint.dev/dockerfile-0.2.1.wasm"
  ]
}
